<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.divyanshujain.edoteng">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".activities.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.SearchByKeywordActivity" />
        <activity android:name=".activities.SearchByFiltersActivity" />
        <activity android:name=".activities.DescriptionActivity" />
        <activity
            android:name=".activities.CartActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.WishlistActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activities.AddShippingAddressActivity" />
        <activity android:name=".activities.ShippingAddressesActivity" />
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity android:name=".activities.ApplicationSettingActivity"></activity>
    </application>

</manifest>