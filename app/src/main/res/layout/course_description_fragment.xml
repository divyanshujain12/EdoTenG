<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <include layout="@layout/desc_frag_rate_bar" />

        <include layout="@layout/desc_product_name_seller_name" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:text="@string/dummy_desc"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/thirteen_sp"
            pixlui:typeface="Roboto-Medium.ttf" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/button_color">
        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/downloadDigitalTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:text="Digital Version"
            android:drawableTop="@drawable/ic_dwnld_digital_ver"
            android:textColor="@color/white"
            android:textSize="@dimen/thirteen_sp"
            pixlui:typeface="Roboto-Medium.ttf" />
        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/addToWishListTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:text="Add To Wishlist"
            android:drawableTop="@drawable/ic_add_wishlist"
            android:textColor="@color/white"
            android:textSize="@dimen/thirteen_sp"
            pixlui:typeface="Roboto-Medium.ttf" />
        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/addToCartTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:text="Add To Cart"
            android:drawableTop="@drawable/ic_add_cart"
            android:textColor="@color/white"
            android:textSize="@dimen/thirteen_sp"
            pixlui:typeface="Roboto-Medium.ttf" />
    </LinearLayout>
</FrameLayout>